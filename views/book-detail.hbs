<h1>{{title}}</h1>
<h2>{{author.0.name}} {{author.0.lastName}}</h2>
<p>{{description}}</p>
<h3>rating: {{rating}}</h3>
<p><a href="/">back</a></p>
{{#if owner}}
<h3>owner: {{owner.username}}</h3>
{{/if}}
{{!-- <h4>{{location.coordinates}}</h4> --}}
<div id="map"></div>

<hr>
<p>Add a review</p>
<form action="/reviews/add?book_id={{_id}}" method="post">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>

<hr>

<h2>Reviews</h2>

<ul>
  {{#each reviews}}
  <li>{{comments}} - by {{user}}</li>
  {{else}}
  <li>no reviews yet.</li>
  {{/each}}
</ul>
